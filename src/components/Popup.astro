---
// src/components/Popup.astro
const { name, descripcion, img, idProyecto, stackTechnologies } = Astro.props;
const id = "popup" + idProyecto;
const closeBtnId = "close-btn" + idProyecto;
---

<div class="popup-overlay" id={id} style="display:none;">
    <div class="popup">
        <button class="close-btn" id={closeBtnId}> X </button>
        <div class="popup-container">
            <div class="popup-container-izq">
                <h2>{name}</h2>
                <p>{descripcion}</p>
            </div>
            <div class="popup-container-der">
                <img src={img} />
            </div>
        </div>
        <div class="popup-container-stack">
            <h1>Stack</h1>
            <div class="popup-container-stackImg">
                {stackTechnologies.map((tec: any) => <img src={tec.urlImg} />)}
            </div>
        </div>
    </div>
</div>

<style>
    /* --bg-color: #080808;
    --second-bg-color: #131313;
    --text-color: white;
    --main-color: #00ffee; */

    .popup-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999999;
    }

    .popup {
        display: flex;
        flex-direction: column;
        margin: 0 auto;
        margin-top: 15rem;
        background-color: white;
        padding: 2rem;
        border: 0.5rem solid #00ffee;
        background-color: #131313;
        border-radius: 10px;
        text-align: center;
        width: 60%;
        height: auto;
        color: black;
    }
    .popup-container {
        display: flex;
        width: 100%;
        height: auto;
    }
    .popup-container-izq,
    .popup-container-der {
        flex: 1;
        padding: 2rem;
    }

    .popup-container-der {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .popup-container-stackImg {
        display: flex;
        flex-direction: row;
        width: 100%;
        justify-content: center;
        gap: 2rem;
    }
    .popup-container-izq h2 {
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 3.5rem;
        color: white;
        letter-spacing: 0.3rem;
        padding-bottom: 3rem;
    }

    .popup-container-izq p {
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 1.5rem;
        color: white;
        letter-spacing: 0.1rem;
        padding-bottom: 3rem;
        text-align: justify;
        min-height: 400px;
    }

    .popup img {
        width: 80%;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 1rem;
    }

    .popup-container-stack {
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 100%;
        height: auto;
        gap: 2rem;
        margin-left: 4.5rem;
    }

    .popup-container-stack img {
        width: 6rem;
        height: 6rem;
        border-radius: 50%;
        align-self: center;
        border: 3px solid var(--main-color);
        box-shadow: 0 0 25px var(--main-color);
        object-fit: cover;
    }

    .popup-container-stack h1 {
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 18px;
        width: 100%;
        color: #00ffee;
    }

    .close-btn {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        align-self: end;
        top: 10px;
        right: 10px;
        border: 2px solid black;
        background: none;
        font-size: 1.5rem;
        font-weight: 600;
        cursor: pointer;
        background-color: #00ffee;
        width: 40px;
        height: 40px;
        text-align: center;
        border-radius: 50%;
    }
</style>
